@page
@model EditEventModel
@{
}

@section scripts {
    <partial name="_ValidationScriptsPartial" />
}
<link rel="stylesheet" href="~/styles.css">
<form method="post" class="myform">
    <div class="control-wrap">
        <label for="Id">ID</label>
        <input type="text" asp-for="AnEvent.Id" id="firstname" readonly>
        <span asp-validation-for="AnEvent.Id" class="text-danger"></span>

    </div>
    <div class="control-wrap">
        <label for="title">Title</label>
        <input type="text" asp-for="AnEvent.Title" id="firstname">
        <span asp-validation-for="AnEvent.Title" class="text-danger"></span>

    </div>

    <div class="control-wrap">
        <label for="description">Description</label>
        <input type="text" asp-for="AnEvent.Description" id="lastname">
        <span asp-validation-for="AnEvent.Description" class="text-danger"></span>
    </div>

    <div class="control-wrap">
        <label for="email"> Location</label>
        <input type="text" asp-for="AnEvent.Location" id="email">
        <span asp-validation-for="AnEvent.Location" class="text-danger"></span>

    </div>
    <div class="control-wrap">
        <label for="phone">Location-url</label>
        <input type="text" asp-for="AnEvent.LocationUrl" id="phone">
        <span asp-validation-for="AnEvent.LocationUrl" class="text-danger"></span>

    </div>
    <div class="control-wrap ">
        <label for="message">Event Date</label>
        <input type="text" asp-for="AnEvent.EventDate" id="message">
        <span asp-validation-for="AnEvent.EventDate" class="text-danger"></span>

    </div>
    <div class="control-wrap ">
        <label for="message">Image url</label>
        <input type="text" asp-for="AnEvent.ImageUrl" id="message">
        <span asp-validation-for="AnEvent.ImageUrl" class="text-danger"></span>

    </div>
    <div class="control-wrap centered">
        <button type="submit" value="Update" id="save-btn">Update</button>
    </div>


</form>